<UserControl x:Class="isil.UserViews.Students.StudentUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModel="clr-namespace:isil"
             mc:Ignorable="d" 
               
             d:DesignHeight="300" d:DesignWidth="300">

    <Grid Background="AntiqueWhite" Margin="10">
        <Image HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="100"/>
        <Label Content="{Binding Path = StudentSeatno}" HorizontalAlignment="Left" Margin="237,10,0,0" VerticalAlignment="Top"/>
        <Label Content="{Binding Path = StudentHandRasied}" HorizontalAlignment="Left" Margin="237,56,0,0" VerticalAlignment="Top"/>
        <Label Content="{Binding Path = StudentPollAns}" HorizontalAlignment="Left" Margin="237,100,0,0" VerticalAlignment="Top"/>
        <Label Content="{Binding Path = StudentMicActive}" HorizontalAlignment="Left" Margin="237,150,0,0" VerticalAlignment="Top"/>
       

    </Grid>
</UserControl>
